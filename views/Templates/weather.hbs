<!DOCTYPE html>
<html lang="en">
{{>HeadLink}}
<body>
    {{>nav}}
    {{!-- Search Bar --}}
    <div class='containter-fluid main_header'>
        <div class='row'>
            <div class="col-md-10 col-12 mx-auto" >
                <div class='main_content'>
                    <form class="temp_form">
                        <input type='text' id='cityName' placeholder="Enter City Name" autocomplete="off">
                        <input type="submit" value='Search' id='SubmitBtn'>
                    </form>
                </div>
                <div class="tempInfo">
                    <div class="top_layer">
                        <p id="day"></p>
                        <p id="today_data"></p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Temprature</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id='temp_temp'>0</span> <sup>o</sup>C</p>
                            <p id="temp_status"></p>                      
                        </div>
                    </div>
                    <div class="top_layer">
                        <p id="MinMaxTemp"></p>
                        <p id="WindSpeed"></p>
                    </div>
                </div>
            </div>   
        </div>
     </div>
    {{>footer}}
    <script src="js/main.js"></script>
</body>
</html>