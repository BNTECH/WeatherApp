<html lang="en">
{{>HeadLink}}
<body>
    {{>nav}}
    <div class='containter-fluid main_header'>
        <div class='row'>
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <!-- Left header div -->
                    <div class='col-md-6 col-12 main_header_left'>
                        <p>Welcome to Glowe</p>
                        <h1>Get Latest <span class='txt_clr'>Weather</span> info in your city</h1>
                        <a href='/weather'><button>Check Weather</button></a>
                    </div>
                    <!-- Right  Header Div -->
                    <div class='col-md-6 col-12 main_header_right'>
